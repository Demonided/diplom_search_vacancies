<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- NO COLOR -->

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@drawable/bottom_navigation_tab_bar</item>
        <item name="itemTextColor">@drawable/bottom_navigation_tab_bar</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomNavigationText">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bold32_font">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="medium22_font">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="medium16_font">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular16_font">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular12_font">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="searchBar" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">custom</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="cursorColor">@color/blue</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/search_bar_background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="radio_button" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/blue</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorSecondary">@color/blue</item>
    </style>

</resources>
