<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/errorContentBottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_default_title_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/xxs_margin"
            android:src="@drawable/back_icon"
            app:tint="@color/black" />

        <TextView
            style="@style/medium22_font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/xxs_margin"
            android:layout_marginEnd="@dimen/xs_margin"
            android:layout_weight="1"
            android:text="@string/region_selection"
            android:textColor="@color/black" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchContainerConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_textview_height"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_background_12"
        android:backgroundTint="@color/light_grey"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/navigationBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/xs_margin"
        android:layout_marginHorizontal="@dimen/margin">

        <EditText
            android:id="@+id/search_text_field"
            style="@style/regular16_font"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/enter_region"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textCursorDrawable="@drawable/text_edit_cursor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/search_image_view"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/xs_margin" />

        <ImageView
            android:id="@+id/search_image_view"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:layout_gravity="end"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/ic_search_24px"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/xxs_margin" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchContainerConstraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin" />
    
    <LinearLayout
        android:id="@+id/errorContainerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/searchContainerConstraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/errorContentBottomGuideline"
        android:layout_marginTop="@dimen/xs_margin"
        android:layout_marginHorizontal="@dimen/margin">

        <ImageView
            android:id="@+id/errorImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/state_image_nothing_found" />

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/medium22_font"
            android:textColor="@color/black"
            tools:text="Такого региона"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
